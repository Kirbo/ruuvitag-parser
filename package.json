{
  "name": "ruuvitag-parser",
  "main": "dist/index.js",
  "types": "src/types/index.d.ts",
  "repository": "https://gitlab.com/kirbo/ruuvitag-parser",
  "author": "Kimmo Saari <kirbownz@me.com>",
  "type": "commonjs",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.1.1",
    "prettier": "2.4.0",
    "ts-jest": "27.0.5",
    "ttypescript": "1.5.12",
    "typescript": "4.4.2",
    "typescript-transform-paths": "3.3.1"
  },
  "dependencies": {
    "@types/node": "16.7.13"
  },
  "scripts": {
    "compile:ci": "ttsc -p tsconfig.compile.json",
    "compile:clean": "rm -rf dist",
    "compile": "yarn compile:clean && ttsc -p tsconfig.compile.json",
    "lint": "eslint --ext .ts src/",
    "test:unit": "jest --verbose",
    "test": "yarn lint && yarn verify && yarn test:unit",
    "verify": "ttsc --noEmit"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md",
    "tsconfig.json"
  ],
  "jest": {
    "preset": "ts-jest",
    "testRegex": ".*unit.test.ts$",
    "moduleNameMapper": {
      "@index$": "<rootDir>/src",
      "@src/(.*)$": "<rootDir>/src/$1",
      "@lib/(.*)$": "<rootDir>/src/lib/$1",
      "@dataformats": "<rootDir>/src/dataformats",
      "@dataformats/(.*)$": "<rootDir>/src/dataformats/$1",
      "@types": "<rootDir>/src/types",
      "@types/*": "<rootDir>/src/types/$1"
    }
  }
}
